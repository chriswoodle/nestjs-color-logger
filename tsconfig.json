{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "incremental": true
    },
    "exclude": [
        "test",
        "dist"
    ]
}